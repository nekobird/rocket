{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "dom.iterable",
      "dom",
      "es6"
    ],
    "module": "ES6",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "outDir": "build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": false,
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
  },
  "include": [
    "rocket/*"
  ],
  "exclude": [
    "node_modules",
    "source/**"
  ]
}
