{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": false,
    "target": "es2018",
    // "allowJs": true,
    // "strict": true,
  },
  "include": [
    "rocket/*"
  ],
  "prepare": "npm run buildRocket",
  "exclude": [
    "node_modules",
    "src/**"
  ]
}