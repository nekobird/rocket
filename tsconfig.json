  "compilerOptions": {
    "allowJs": true,
    "module": "es6",
    "target": "es2018",
    "noImplicitAny": false,
    "outDir": "build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
  },
  "include": [
    "rocket/*"
  ],
  "exclude": [
    "node_modules",
    "src/**"
  ]
}